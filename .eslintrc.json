{
  "extends": ["plugin:prettier/recommended", "@rocketseat/eslint-config/node"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-useless-constructor": "off",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false,
        "endOfLine": "lf"
      }
    ]
  }
}
